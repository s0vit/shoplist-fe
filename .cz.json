{
  "commitizen": {
    "name": "cz_customize",
    "version_scheme": "semver",
    "update_changelog_on_bump": true,
    "customize": {
      "message_template": "{{change_type}}:{% if show_message %} {{message}}{% endif %}",
      "example": "feat: this feature enable customize through config file",
      "schema": "<type>: <body>",
      "schema_pattern": "^(build|chore|docs|feat|fix|refactor|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w \\-'])+([\\s\\S]*)",
      "change_type_order": [
        "Breaking Changes",
        "Added",
        "Fixed",
        "Performance",
        "Reverted",
        "Maintenance",
        "Documentation"
      ],
      "commit_parser": "^((?P<change_type>chore|docs|feat|fix|refactor|style|test|BREAKING CHANGE)(?:\\((?P<scope>[^()\r\n]*)\\)|\\()?(?P<breaking>!)?|\\w+!):\\s(?P<message>.*)?",
      "changelog_pattern": "^(.+!|BREAKING CHANGE|chore|docs|feat|fix|refactor|style|test)(\\([\\w\\-\\.]+\\))?:",
      "change_type_map": {
        "BREAKING CHANGE": "Breaking Changes",
        "chore": "Maintenance",
        "docs": "Documentation",
        "feat": "Added",
        "fix": "Fixed",
        "refactor": "Maintenance",
        "style": "Maintenance",
        "test": "Maintenance"
      }
    }
  }
}