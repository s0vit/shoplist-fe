{
  "commitizen": {
    "name": "cz_customize",
    "customize": {
      "message_template": "{{change_type}}({{scope}}): {{message}}",
      "example": "feat(core): add new authentication strategy",
      "schema": "<type>(<scope>): <subject>",
      "schema_pattern": "^(feat|fix|refactor|test|docs|style|chore|build)\\(([^)]+)\\):\\s(.+)",
      "change_type_order": [
        "feat", "fix", "refactor", "test", "docs", "style", "chore", "build"
      ],
      "commit_parser": "^(?P<change_type>feat|fix|refactor|test|docs|style|chore|build)\\((?P<scope>[^)]+)\\):\\s(?P<message>.*)?",
      "changelog_pattern": "^(feat|fix|refactor|test|docs|style|chore|build)",
      "change_type_map": {
        "feat": "Features",
        "fix": "Bug Fixes",
        "refactor": "Refactoring",
        "test": "Tests",
        "docs": "Documentation",
        "style": "Style",
        "chore": "Chores",
        "build": "Build System"
      },
      "questions": [
        {
          "type": "list",
          "name": "change_type",
          "message": "Select the type of change you are committing:",
          "choices": [
            { "value": "feat", "name": "feat:     A new feature" },
            { "value": "fix", "name": "fix:      A bug fix" },
            { "value": "refactor", "name": "refactor: A code change that neither fixes a bug nor adds a feature" },
            { "value": "test", "name": "test:     Adding missing tests or correcting existing tests" },
            { "value": "docs", "name": "docs:     Documentation only changes" },
            { "value": "style", "name": "style:    Changes that do not affect code semantics (formatting, etc.)" },
            { "value": "chore", "name": "chore:    Changes to the build process or auxiliary tools" },
            { "value": "build", "name": "build:    Changes that affect the build system or external dependencies" }
          ]
        },
        {
          "type": "input",
          "name": "scope",
          "message": "Specify the scope of this change (e.g., component or file name):"
        },
        {
          "type": "input",
          "name": "message",
          "message": "Write a short, imperative description of the change:"
        }
      ]
    }
  }
}
