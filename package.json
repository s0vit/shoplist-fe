    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "playwright": "^1.51.1",
    "postcss": "^8.5.6",
    "postcss-safe-parser": "^7.0.1",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "sass-embedded": "^1.89.2",
    "storybook": "^8.6.14",
